{
  "name": "git-jira-fast-ticket",
  "version": "0.0.1",
  "description": "CLI tool for quick Jira ticket creation",
  "main": "dist/index.js",
  "type": "commonjs",
  "files": [
    "dist/bundle.js"
  ],
  "scripts": {
    "release": "semantic-release",
    "build": "tsc",
    "postinstall": "chmod +x dist/bundle.js",
    "start": "node dist/bundle.js",
    "dev": "tsx index.ts",
    "test": "jest --config jest.config.ts",
    "prepare": "husky",
    "lint:eslint": "eslint .",
    "lint:eslint:fix": "eslint . --fix",
    "lint:prettier": "prettier",
    "lint:prettier:fix": "prettier --write",
    "bundle": "esbuild index.ts --bundle --platform=node --outfile=dist/bundle.js"
  },
  "bin": {
    "git-jira-fast-ticket": "./dist/bundle.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@eslint/js": "^9.12.0",
    "@npmcli/package-json": "^6.0.1",
    "commander": "^12.1.0",
    "jira.js": "^4.0.2",
    "ora": "^8.1.0",
    "read-package-up": "^11.0.0",
    "readline-sync": "^1.4.10",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/eslintrc": "^3.1.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@types/eslint": "^9.6.1",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.6",
    "@types/readline-sync": "^1.4.8",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.10.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "semantic-release": "^24.1.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ]
  }
}
